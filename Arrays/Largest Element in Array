class Solution {
    public static int largest(int[] arr) {
        
        //Brute force - sorting  tc : O(n log n)
        Arrays.sort(arr);
        return arr[arr.length-1];
        
        
        //Optimal solution tc : O(n)
        int largest = arr[0]; // assume first element is largest

        for (int i = 1; i < arr.length; i++) {
            if (arr[i] > largest) {
                largest = arr[i];
            }
        }
        
    }
}

